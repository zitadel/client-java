{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.7/.schema/devbox.schema.json",
  "packages": [
    "jdk17@latest",
    "maven@latest",
    "lefthook@latest"
  ],
  "shell": {
    "init_hook": [
      "lefthook install"
    ],
    "scripts": {
      "format": [
        "mvn spotless:apply"
      ],
      "test": [
        "mvn test"
      ],
      "check": [
        "mvn verify"
      ]
    }
  }
}
